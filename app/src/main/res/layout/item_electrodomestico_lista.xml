<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <!-- Imagen de la categoría -->
    <ImageView
        android:id="@+id/ivCategoria"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:contentDescription="Categoría"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <!-- Nombre del electrodoméstico -->
    <TextView
        android:id="@+id/tvNombreElectrodomestico"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Electrodoméstico"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/ivCategoria"
        app:layout_constraintStart_toEndOf="@+id/ivCategoria"
        app:layout_constraintEnd_toEndOf="parent" /> <!-- Cambio aquí -->

    <!-- Consumo en watts -->
    <TextView
        android:id="@+id/tvConsumoWatts"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Consumo: 100W"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/tvNombreElectrodomestico"
        app:layout_constraintStart_toStartOf="@+id/tvNombreElectrodomestico"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Cantidad -->
    <TextView
        android:id="@+id/tvCantidad"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Cantidad: 2"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/tvConsumoWatts"
        app:layout_constraintStart_toStartOf="@+id/tvNombreElectrodomestico"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Horas de uso -->
    <TextView
        android:id="@+id/tvHorasUso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Horas: 3h/día"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/tvCantidad"
        app:layout_constraintStart_toStartOf="@+id/tvNombreElectrodomestico"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Días de uso -->
    <TextView
        android:id="@+id/tvDiasUso"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Días: 5/7"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@+id/tvHorasUso"
        app:layout_constraintStart_toStartOf="@+id/tvNombreElectrodomestico"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
